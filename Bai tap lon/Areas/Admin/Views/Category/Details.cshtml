@model Bai_tap_lon.Context.Categorry

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<style>
    .btn-warning:hover {
        background-color: #000000;
        color: #00ff21;
    }

    .field {
        font-weight: bold;
    }

    .fullDes_Detai {
        max-height: 900px;
        overflow: hidden;
    }

        .fullDes_Detai img {
            margin-left: 20%;
        }

    .readmore {
        text-align: center;
        cursor: pointer;
    }

    .active .fullDes_Detai {
        height: 100%;
    }

    .btnTop__active {
        width: 200px;
        margin: 10px;
        margin-left: 20px;
    }
</style>
<!--------------------------------------------------------->
<div class="card-body row">
    <a href="@Url.Action("Index","Category")" class="btn btn-danger btn-warning btnTop__active">  Trở về trang trước</a>
    <a href="@Url.Action("Edit","Category",new { id = Model.Id })" class="btn btn-danger btn-warning btnTop__active"><i class="fa-solid fa-pen-to-square"></i> Chỉnh sửa</a>

    <div class="col-md-9">
        <table class="table table-bordered table-striped" id="myTable">
            <thead>
                <tr>

                    <th class="text-center" style="width:200px">  Trường</th>
                    <th class="text-center"> Nội dung  </th>

                </tr>
            </thead>

            <tbody>

                <tr>
                    <td class="field">Tên thuong hiệu</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td class="field">Hinh</td>
                    <td>@Model.Avatar</td>
                </tr>
                <tr>
                    <td class="field">Slug</td>
                    <td>@Model.Slug</td>
                </tr>
                <tr>
                          <td class="field">Deleted</td>
                    <td>@Model.Deleted</td>
                </tr>
                <tr>
                          <td class="field">ShowOnHomePage</td>
                    <td>@Model.ShowOnHomePage</td>
                </tr>
                <tr>
                    <td class="field">DisplayOrder</td>
                    <td>@Model.DisplayOrder</td>
                </tr> 
                <tr>
                    <td class="field">CreateOnUtc</td>
                    <td>@Model.CreateOnUtc</td>
                </tr>
                <tr>
                    <td class="field">UpdateOnUtc</td>
                    <td>@Model.UpdateOnUtc</td>
                </tr>
            </tbody>

        </table>
    </div>
   
</div>
