
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ decimal thanhtien = 0;}
<h2 style="color:red">THANH TOÁN</h2>

<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <td>Mã SP</td>
                            <td>Tên SP</td>
                            <td>Ảnh SP</td>
                            <td>Số lượng</td>
                            <td>Giá</td>
                            <td>Thành tiền</td>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var price = item.Product.Price;
                            var priceSale = item.Product.PriceDiscount;
                            var quatity = item.Quantity;
                            thanhtien += (Convert.ToDecimal(priceSale * quatity));
                            <tr>
                                <td>@item.Product.Id</td>
                                <td>@item.Product.Name</td>
                                <td><img src="~/Content/images/items/@item.Product.Avatar" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Price</td>
                                <td>@(Convert.ToDecimal(thanhtien).ToString("#,##0"))</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            // tao form
    <div class="contact-form">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
        {
            <div class="form-group">
                <label>Người nhận</label>
                <input name="shipName" required class="form-control" />
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input name="mobile" class="form-control" required maxlength="11" minlength="9" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input name="address" required class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required class="form-control" />
            </div>
        }

        
        <a href="@Url.Action("Index","Payment")" type="submit" class="btn">Gửi đơn hàng<i class="fa fa-chevron-right"></i> </a>
    </div>
    
